<div class="bottlecap-list-app">
    {{!-- Sheet Tab Navigation --}}
  <nav class="tabs" data-group="primary">
    <a class="{{tabs.trove.cssClass}}" data-action="tab" data-tab="trove" data-group="primary" >
      <div class="tab-text">{{localize "BC.bottleCapList.tabs.current"}}
        <i class="fas fa-hand-spock"></i>
      </div>
    </a>
    <a class="{{tabs.graveyard.cssClass}}" data-action="tab" data-tab="graveyard" data-group="primary" >
      <div class="tab-text">
        {{localize "BC.bottleCapList.tabs.graveyard"}} <i class="fa-solid fa-champagne-glasses"></i><i class="fas fa-ghost"></i>
      </div>
    </a>
  </nav>
  <div class="list-container">
    <ol class="bottlecap-list tab {{tabs.trove.cssClass}}" data-tab="trove" data-group="primary">
      <li class="list-header flexrow">
        <div class="total" data-tooltip="{{toolTipCurrent}}" data-tooltip-direction="UP">
          x{{bottleCapList.trove.length}}
        </div>
        <div class="select-player-container">
          {{localize "BC.bottleCapList.player"}}:
          <select class="select-player">
            {{selectOptions userData selected=currentUserId valueAttr="id" labelAttr="name"}}
          </select>
          <a data-action="resetUser" data-tooltip="BC.config.tooltip.resetUser"><i class="fas fa-rotate-left"></i></a>
        </div>
        <div class="action-list create">
          {{#if userCanManageCurrent}}
            <a data-action="bottlecapAction" data-action-type="create" data-tooltip="BC.config.tooltip.create"><i class="fas fa-plus"></i></a>
          {{/if}}
        </div>
      </li>
      {{#each bottleCapList.trove as |cap|}}
        <li class="list-item flexrow">
          <img class="thumb" src="{{cap.img}}">
          <div class="name flexcol">
            <div class="name-text">
              {{cap.name}}
            </div>
            <div class="name-context">
              {{cap.context}}
            </div>
          </div>
          <div class="action-list">
            {{#if (bcCompare ../userIsCurrent "||" ../userCanManageCurrent)}}
              <a data-action="bottlecapAction" data-action-type="spend" data-cap-id="{{cap.id}}" data-tooltip="BC.config.tooltip.spend"><i class="fas fa-dice-d20"></i></a>&nbsp;
              <a data-action="bottlecapAction" data-action-type="edit" data-cap-id="{{cap.id}}" data-tooltip="BC.config.tooltip.edit"><i class="fas fa-edit"></i></a>&nbsp;
            {{/if}}
            {{#if ../userCanManageCurrent}}
              <a data-action="bottlecapAction" data-action-type="delete" data-cap-id="{{cap.id}}" data-tooltip="BC.config.tooltip.delete"><i class="fas fa-trash"></i></a>
            {{/if}}
          </div>
        </li>
      {{else}}
        <li class="list-item" style="text-align:center">
          <span>{{localize "BC.bottleCapList.noActiveCaps"}}</span>
        </li>
      {{/each}}
    </ol>
    <ol class="bottlecap-list tab {{tabs.graveyard.cssClass}}" data-tab="graveyard" data-group="primary">
      <li class="list-header flexrow">
        <div class="total" data-tooltip="{{toolTipSpent}}" data-tooltip-direction="UP">
          x{{bottleCapList.graveyard.length}}
        </div>
        <div class="select-player-container">
          {{localize "BC.bottleCapList.player"}}:
          <select class="select-player">
            {{selectOptions userData selected=currentUserId valueAttr="id" labelAttr="name"}}
          </select>
          <a data-action="resetUser" data-tooltip="BC.config.tooltip.resetUser"><i class="fas fa-rotate-left"></i></a>
        </div>
        <div class="action-list"></div>
      </li>
      {{#each bottleCapList.graveyard as |cap|}}
        <li class="list-item flexrow">
          <img class="thumb" src="{{cap.img}}">
          <div class="name flexcol">
            <div class="name-text">
              {{cap.name}}
            </div>
            <div class="name-context">
              {{cap.context}}
            </div>
          </div>
          <div class="action-list">
            {{#if ../userCanManageCurrent}}
              <a data-action="bottlecapAction" data-action-type="revivify" data-cap-id="{{cap.id}}" data-tooltip="BC.config.tooltip.revivify"><i class="fas fa-rotate-left"></i></a>&nbsp;
            {{/if}}
            {{#if (bcCompare ../userIsCurrent "||" ../userCanManageCurrent)}}
              <a data-action="bottlecapAction" data-action-type="edit" data-cap-id="{{cap.id}}" data-tooltip="BC.config.tooltip.edit"><i class="fas fa-edit"></i></a>&nbsp;
            {{/if}}
            {{#if ../userCanManageCurrent}}
              <a data-action="bottlecapAction" data-action-type="delete" data-cap-id="{{cap.id}}" data-tooltip="BC.config.tooltip.delete"><i class="fas fa-trash"></i></a>
            {{/if}}
          </div>
        </li>
      {{else}}
        <li class="list-item" style="text-align:center">
          <span>{{localize "BC.bottleCapList.noSpentCaps"}}</span>
        </li>
      {{/each}}
    </ol>
  </div>
</div>
