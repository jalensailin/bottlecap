<form class="bottlecap-config">
  <ol class="bottlecap-settings-list">
    {{#if isGM}}
      <li class="flexrow bottlecap-settings-item">
        <div class="bottlecap-settings-label">{{localize "BC.config.user"}}: </div>
        {{#if isCreationDialog}}
          <select class="bottlecap-select-user" name="user">
            {{selectOptions userData selected=currentUser.id valueAttr="id" labelAttr="name"}}
          </select>
        {{else}}
          <div class="bottlecap-static-user">{{currentUser.name}}</div>
        {{/if}}
      </li>
    {{/if}}
    <li class="flexrow bottlecap-settings-item">
      <div class="bottlecap-settings-label">{{localize "BC.config.name"}}: </div>
      <input type="text" name="name" data-dtype="String" value="{{name}}">
    </li>
    <li class="flexrow bottlecap-settings-item">
      <div class="bottlecap-settings-label">{{localize "BC.config.icon"}}: </div>
      <div class="flexrow bottlecap-filepicker">
        <file-picker type="image" name="img" value="{{img}}"></file-picker>
      </div>
    </li>
    <li class="flexrow bottlecap-settings-item">
      <div class="bottlecap-settings-label">{{localize "BC.config.context"}}: </div>
      <input type="text" name="context" placeholder="{{localize "BC.config.contextPlaceholder"}}" value="{{context}}" data-dtype="String">
    </li>
  </ol>
  <button class="bottlecap-create-cap">
    {{#if isCreationDialog}}
      {{localize "BC.config.button.give"}}
    {{else}}
      {{localize "BC.config.button.update"}}
    {{/if}}
  </button>
</form>
